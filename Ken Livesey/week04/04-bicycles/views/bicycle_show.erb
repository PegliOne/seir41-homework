<div id="show">
  <h1><%= @bicycle["model"] %></h1>
  <img src="<%= @bicycle["image"] %>" alt="<%= @bicycle["model"] %>">
  <table>
    <tbody>
      <tr>
        <td>Manufacturer</td>
        <td><%= @bicycle["manufacturer"] %></td>
      </tr>
      <tr>
        <td>Description</td>
        <td><%= @bicycle["description"] %></td>
      </tr>
      <tr>
        <td>Price</td>
        <td>$<%= @bicycle["price"] %></td>
      </tr>
    </tbody>
  </table>

  <div class="controls">
    <a href="/bicycle/<%= @bicycle["id"] %>/edit">Edit</a>
    <a href="/bicycle/<%= @bicycle["id"] %>/delete">Delete</a>
  </div>
</div>
